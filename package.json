    "test": "node -r ts-node/register --inspect fuse.ts test"
  },
  "repository": "https://github.com/LemmyNet/lemmy-isomorphic-ui",
  "dependencies": {
    "cookie-parser": "^1.4.3",
    "express": "~4.17.1",
    "inferno": "^7.4.3",
    "inferno-create-element": "^7.4.3",
    "inferno-hydrate": "^7.4.3",
    "inferno-router": "^7.4.3",
    "inferno-server": "^7.4.3",
    "serialize-javascript": "^4.0.0"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.1",
    "@types/enzyme": "^3.1.10",
    "@types/express": "^4.11.1",
    "@types/jest": "^26.0.10",
    "@types/node": "^14.6.0",
    "@types/serialize-javascript": "^4.0.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-inferno": "^1.3.0",
    "eslint": "^7.5.0",
    "eslint-plugin-jane": "^8.0.4",
    "fuse-box": "3.7.1",
    "fuse-test-runner": "^1.0.16",
    "husky": "^4.2.5",
    "inferno-devtools": "^7.4.3",
    "inferno-test-utils": "^7.4.3",
    "jest": "^26.4.2",
    "jsdom": "16.4.0",
    "jsdom-global": "3.0.2",
    "lint-staged": "^10.1.3",
    "prettier": "^2.0.4",
    "sortpack": "^2.1.4",
    "ts-node": "^9.0.0",
    "ts-transform-classcat": "^1.0.0",
    "ts-transform-inferno": "^4.0.3",
    "tslint-react-recommended": "^1.0.15",
    "typescript": "^4.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js}": [
      "prettier --write",
      "eslint --fix"
    ],
    "package.json": [
      "sortpack"
    ]
  }
